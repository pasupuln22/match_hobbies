doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css', integrity='sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==', crossorigin='anonymous', referrerpolicy='no-referrer')
  style.
    body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
        background-color: white;
        color: black;
        padding-top: 150px;
    }

    .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        overflow: hidden;
        background-color: #f1f1f1;
        padding: 20px;
        z-index: 9999;
    }

    .header a {
        float: left;
        color: black;
        text-align: center;
        padding: 12px;
        margin-right: 10px;
        text-decoration: none;
        font-size: 18px;
        line-height: 25px;
        border-radius: 4px;
    }

    .header a.logo {
        font-size: 25px;
        font-weight: bold;
        display: inline-block;
    }

    .header a.logo img {
        margin-top: -6px;
        height: 30px;
        margin-right: 10px;
        margin-bottom: -7px;
        border-radius: 100px;
    }

    .header a:hover {
        background-color: #ddd;
        color: black;
    }

    .header a.active {
        background-color: dodgerblue;
        color: white;
    }

    .header-right {
        float: right;
    }

    a {
        color: white;
        text-decoration: none;
    }

    h1 {
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th,
    td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    @media screen and (max-width: 500px) {
        body {
            padding-top: 90%;
        }

        .header a {
            float: none;
            display: block;
            text-align: left;
            margin: 10px 0;
        }

        .header-right {
            float: none;
        }

        .toggle {
            margin-left: 0;
        }

        .search-container {
            text-align: center;
        }

        #searchInput {
            width: 70%;
        }

        button {
            width: 28%;
        }
    }

    .search-container {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    #searchInput,
    select {
        padding: 10px;
        margin-right: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    button {
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        border: 1px solid #ddd;
        border-radius: 4px;
        cursor: pointer;
    }

    button:hover {
        background-color: #45a049;
    }

  body
    .header
      a(href='/home', class='logo')
        img(src='./assets/profile/profile.jpg', alt='')
        span MATCH INTERESTS
      .header-right
        a(href='/home', class=currentPage === 'home' ? 'active' : '') Home
        // Check if the user is logged in
        if loggedIn
          // Show "Logout" if logged in
          a(href='/logout') Logout
        else
          // Show "Login" if not logged in
          // Highlight "Login" link if the current page is the login page
          a(href='/login', class=currentPage === 'login' ? 'active' : '') Login
